{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@core/*": ["core/*"],
            "@commands/*": ["commands/*"],
            "$src/*": ["src/*"]
        }
    },
    "include": [
        "*.ts",
        "commands/*.ts",
        "commands/*/*.ts",
        "core/*.ts",
        "core/internal/*.ts"
    ],
}